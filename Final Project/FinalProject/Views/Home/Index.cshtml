@model FinalProject.Models.HomeViewModel

<html>

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="~/Styles/Home.css" rel="stylesheet" />
        <title>Final Project</title>
    </head>

    <body>
        
        <div class="home">

           <!-- HEADER BEGINS -->
           <header>
                <div>
                    <h2>Welcome to Cuyahoga Community College Student Services Online</h2>
                </div>
                <p class="em"> Cuyahoga Community College recognizes students' rights to access personal and academic records in accordance with the Family Education Rights and Privacy Act of 1974 (FERPA) as amended by Public Law 93-568</p><br>
            </header>
            <!-- HEADER ENDS -->

            <!-- MAIN CONTENT BEGINS -->

            <div id="login" class="border">

                <h2>Login</h2>
                 <p class="text">Already have an account with us? Returning users may login by entering their site username and password.</p>
                    <form method="POST" action="">
                        <label for="Name">Username</label>
                        <input type="text" name="username" class="usrname"><br><br>
                        <label for="Password">Password</label>
                        <input type="password" name="password" class="pword"><br><br>
                        <button type="submit" class="btn1">Login</button>
                    </form>

                <hr>

                <h2>Create New Account</h2>
                <p class="text">New users, please create a new account by providing us with some basic information.</p>
                <form method="POST" action="">
                    <label for="Name">Username</label>
                    <input type="text" name="username" class="name"><br><br>
                    <label for="Password">Password</label>
                    <input type="password" name="password" class="word"><br><br>
                    <label for="E-mail">E-Mail Address</label>
                    <input type="text" name="email" class="mail"><br><br>
                    <label for="Repeat E-mail">Repeat E-Mail Address</label>
                    <input type="text" name="repeatEmail" class="mail2"><br><br>
                    <button type="submit" class="btn2">Create Account</button>
                </form>

            </div>

            <!-- MAIN CONTENT ENDS -->

            <div class="demo"></div>

            <div id="divAccinfo">
                <div class="border1">
                    <div class="border2">
                        <br />
                        AccountName:<br /><br 
                        <label id="AccountName"> </label>
                         EMailAddress <input type="text" name="emailAddress" class="email">
                        <button type="submit" class="btn3">Update</button><br /><br />
                        CurrentGPA <input type="text" name="GPA" class="currentGPA">
                        <button type="submit" class="btn4">Update</button>
                    </div>
                    <hr />
                    <label for="Element" class="elements">ElementName</label>
                    <input type="text" name="ElementName" class="element"><br><br>
                    <label for="Value" class="elements">ElementValue</label>
                    <input type="text" name="ElementValue" class="value"><br><br>
                    <button type="submit" class="btn5">Add</button>
                </div>
            </div>

            <!-- FOOTER BEGINS -->
            <div>
                <p>
                    Cuyahoga Community College<br>
                    700 Carnegie Avenue, Cleveland, Ohio 44115
                </p>
            </div>
            <!--FOOTER ENDS -->

           
            <script src="~/Scripts/jquery-2.1.1.min.js"></script>
            <script src="~/Scripts/jquery-ui.min.js"></script>
            <script src="~/Scripts/Home.js"></script>
            

        </div>
    </body>

</html>